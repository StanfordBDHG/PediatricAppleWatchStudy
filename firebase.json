{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "firebasestorage.rules"
  },
  "functions": [
    {
      "codebase": "paws",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install",
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "storage": {
      "port": 9199
    },
    "singleProjectMode": true
  }
}
